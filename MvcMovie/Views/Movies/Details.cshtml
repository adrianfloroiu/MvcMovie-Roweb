@model MvcMovie.Models.MovieReviews

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieItem.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieItem.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieItem.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieItem.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieItem.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieItem.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieItem.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieItem.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MovieItem.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<br />

<h3>Movie Reviews</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reviews[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reviews[0].ReviewText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reviews[0].Date)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.Reviews)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => review.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => review.ReviewText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => review.Date)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

<h3>Add a review</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReview" asp-route-id="@Model.MovieItem.Id" method="post">
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.Reviews[0].Name)</label>
                <input type="text" id="name" name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.Reviews[0].ReviewText)</label>
                @Html.TextArea("reviewText", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>